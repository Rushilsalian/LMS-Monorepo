{
  "name": "lms-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd api && npm run dev",
    "build": "cd apps/frontend && npm run build",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../../api && npm install",
    "start": "npm run start:frontend",
    "start:frontend": "cd apps/frontend && npm run preview",
    "vercel-build": "npm run install:all && npm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "aws-sdk": "^2.1561.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "apps/frontend",
    "api"
  ]
}